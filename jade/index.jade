      //-   div.col-md-10.col-md-offset-1
      //-     h3.center Opinions

      row.navIcons
        .col-xs-4.col-xs-offset-2.col-md-2.col-md-offset-4
          a(href='https://linkedin.com/in/alistim')
            .linkedinBG
        .col-xs-4.col-md-2.col-md-offset-0
          a(href='https://twitter.com/alistmit')    
