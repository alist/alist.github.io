@import '../node_modules/nib'

html
  height 100%
  width 100%
  margin 0 0
  padding 0 0

body
  height 100%
  width 100%
  margin 0 0
  padding 0 0
  font-family 'Open Sans', 'Helvetica-Light', 'Arimo', 'Helvetica Neue', sans-serif
  color white
  background-color white

.stardust
  background-image url("/img/stardust.png")
  background-repeat repeat
  background-size 399px
  background-position center center

.aurora
  background linear-gradient(bottom, rgba(255,255,255,.3),  100% rgba(0,0,0,0))
  height 40%
  width 100%

.fixBottom
  position absolute
  bottom 0px

.hundeepiece
  min-height 100%

.piece
  margin-top 20px

.image
  min-width 100%
  height auto
  background-size contain
  background-position 50%
  background-repeat no-repeat
  &:hover
    opacity 0.7
